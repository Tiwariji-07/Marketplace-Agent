# Application Settings
DEBUG=True

# OpenAI Configuration
# Get your API key from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-1106-preview  # or another supported model

# Redis Configuration
# For local development, install Redis or use a cloud provider
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=  # Leave empty if no password
REDIS_DB=0

# GitHub API Configuration (Optional, for GitHub repository analysis)
# Create a personal access token at https://github.com/settings/tokens
GITHUB_TOKEN=

# Session Configuration
SESSION_EXPIRE_SECONDS=86400  # 24 hours

# API Configuration
API_PREFIX=/api/v1


# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS='["*"]'

# Frontend Configuration (if running separately)
FRONTEND_URL=http://localhost:8501
API_BASE_URL=http://localhost:8000/api/v1

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Optional: API Rate Limiting
RATE_LIMIT=100  # requests per minute
RATE_LIMIT_WINDOW=60  # seconds

# Optional: API Keys for External Services
# WEATHER_API_KEY=your_weather_api_key
# GOOGLE_API_KEY=your_google_api_key

# Optional: Database Configuration (if using a database)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# DATABASE_ECHO=False
